<head>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0; padding: 0 }
    #map-canvas { height: 100% }
  </style>

</head>

<body>
  <%= form_tag bike_stations_index_path do %>
    <div>
      <input id="location" name="location"></input>
      <%= submit_tag 'Set Location', :id => "submit_location" %>
    </div>
  <% end %>

  <div>
    <ol>
      <% @bike_stations.each do |station| %>
        <li>
          <%= "#{station.distance.round(2)} miles - #{station.name} (#{station.spaces} Spaces)" %>
          <button>Select</button>
        </li>
      <% end %>
    </ol>
  </div>

  <div id="map-canvas"></div>
</body>

<%= render 'map_js' %>


